<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_create_report">
    <HorizontalScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    >
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Details"
                        android:id="@+id/details"
                        android:layout_alignParentStart="true" />

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/nrInv"
                        android:hint="Nr. Inv." />

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/det1"
                        android:hint="@string/det1" />

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/det2"
                        android:hint="@string/det2" />

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/det3"
                        android:hint="@string/det3" />

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/det4"
                        android:hint="@string/det4" />

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/det5"
                        android:hint="@string/det5" />

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/det6"
                        android:hint="@string/det6" />

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/det7"
                        android:hint="@string/det7" />

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/crateNumber"
                        android:hint="@string/det10"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Support Fondazione"
                        android:id="@+id/supporFondazioneCheckBox"
                        android:layout_below="@+id/crateNumber"
                        android:layout_alignStart="@+id/crateNumber"
                        android:checked="false" />
                </LinearLayout>
            </ScrollView>


            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView2" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="General Condition"
                        android:id="@+id/generalCondition"
                        android:layout_below="@+id/addImageArtifact"
                        android:layout_toEndOf="@+id/addImageArtifact" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/generalCondition"
                        android:layout_toRightOf="@+id/addImageArtifact"
                        android:id="@+id/conditionGroup">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/goodcon"
                            android:text="Good"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/faircon"
                            android:text="Fairly Good"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/poorcon"
                            android:text="Poor"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rescon"
                            android:text="Restored"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/riccon"
                            android:text="Ri-Composed"/>
                    </RadioGroup>

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/CondNotes"
                        android:text="Condition Notes:"
                        android:layout_below="@+id/specialCare"
                        android:layout_alignStart="@+id/specialCare" />

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/specialCare"
                        android:text="Special Care"
                        android:layout_below="@+id/conditionGroup"
                        android:layout_alignStart="@+id/conditionGroup" />
                </LinearLayout>
            </ScrollView>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView3" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignLeft="@+id/defectsTitle"
                    android:layout_below="@+id/defectsTitle"
                    android:id="@+id/defsContainer"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Defects"
                        android:id="@+id/defectsTitle"
                        android:layout_above="@+id/plasticCheck"
                        android:layout_toEndOf="@+id/generalCondition" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/defect_choose" />

                </LinearLayout>
            </ScrollView>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView4" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Wrapping"
                        android:id="@+id/wrapping"
                        android:layout_below="@+id/addImageArtifact"
                        android:layout_toEndOf="@+id/supporFondazioneCheckBox" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plastic"
                        android:id="@+id/plasticCheck"
                        android:layout_alignStart="@+id/wrapping"
                        android:checked="false"
                        android:layout_alignTop="@+id/nrInv" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A.F. Paper"
                        android:id="@+id/paperCheck"
                        android:checked="false"
                        android:layout_below="@+id/plasticCheck"
                        android:layout_alignStart="@+id/plasticCheck" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Tape"
                        android:id="@+id/tapeCheck"
                        android:checked="false"
                        android:layout_below="@+id/paperCheck"
                        android:layout_alignStart="@+id/paperCheck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Protection"
                        android:id="@+id/protection"
                        android:layout_below="@+id/tapeCheck"
                        android:layout_alignStart="@+id/tapeCheck" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ethafoam"
                        android:id="@+id/foamCheck"
                        android:layout_below="@+id/protection"
                        android:layout_alignStart="@+id/protection"
                        android:checked="false" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Foam Rubber"
                        android:id="@+id/foamRubberCheck"
                        android:checked="false"
                        android:layout_below="@+id/foamCheck"
                        android:layout_alignStart="@+id/foamCheck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Position"
                        android:id="@+id/position"
                        android:layout_below="@+id/foamRubberCheck"
                        android:layout_alignStart="@+id/foamRubberCheck" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flat"
                        android:id="@+id/flatCheck"
                        android:layout_below="@+id/position"
                        android:layout_alignStart="@+id/position"
                        android:checked="false" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vertical"
                        android:id="@+id/verticalCheck"
                        android:layout_below="@+id/flatCheck"
                        android:layout_alignStart="@+id/flatCheck"
                        android:checked="false" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="On One Side"
                        android:id="@+id/sideCheck"
                        android:layout_below="@+id/verticalCheck"
                        android:layout_alignStart="@+id/verticalCheck"
                        android:checked="false" />
                </LinearLayout>
            </ScrollView>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView5" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Add Images"
                        android:id="@+id/addImagesTitle" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Image From Device"
                        android:id="@+id/addDeviceBttn" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Take a New Image"
                        android:id="@+id/launchCameraBttn" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="0 Photos Added."
                        android:id="@+id/imageticker" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Dates and Changes"
                        android:paddingTop="10dp"
                        android:id="@+id/DatesTitle" />


                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:hint="Exit from Museum (dd/mm/yyyy)"
                        android:id="@+id/exitDate"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:hint="Opening / Installation (dd/mm/yyyy)"
                        android:id="@+id/installDate"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:text="Same Condition"
                        android:layout_height="wrap_content"
                        android:id="@+id/samecondition1"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Changes"
                        android:id="@+id/changes1"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:hint="End of Exhibition (dd/mm/yyyy)"
                        android:id="@+id/endDate"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:text="Same Condition"
                        android:id="@+id/samecondition2"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Changes"
                        android:id="@+id/changes2"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:hint="Return to Museum (dd/mm/yyyy)"
                        android:id="@+id/returnDate"/>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </HorizontalScrollView>
</RelativeLayout>



